@namespace Login
@using Forum_Blazor.Authentication
@inject NavigationManager _navMgr
@inject IAuthService _authService


<AuthorizeView>
    <Authorized>
        <img class="icon" src="img/Logout.png" @onclick="Logout" alt="logout icon"/>
    </Authorized>
    
    <NotAuthorized>
        <img class="icon" src="img/Login.png" @onclick="Login" alt="login icon"/>
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        _navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await _authService.LogoutAsync();
        _navMgr.NavigateTo("/Login");
    }

}